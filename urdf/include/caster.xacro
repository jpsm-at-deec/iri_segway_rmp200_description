<?xml version="1.0"?>

<root xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find iri_segway_rmp200_description)/urdf/include/caster.gazebo" />

  <xacro:macro name="segway_caster" params="prefix parent *origin">
    <!-- rear caster set -->
    <link name="${prefix}_support">
      <inertial>
        <mass value="1"/>
        <origin xyz="0 0 0" />
        <inertia 
          ixx="0.00375" ixy="0.0" ixz="0.0"
          iyy="0.00375" iyz="0.0"
          izz="0.00375" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://iri_segway_rmp200_description/meshes/caster_link.dae" scale="0.0254 0.0254 0.0254"/>
        </geometry>
      </visual>
      <!--no collision-->
    </link>

    <joint name="${parent}_${prefix}_support_joint" type="continuous">
      <xacro:insert_block name="origin" />      
      <parent link="${parent}" />
      <child link="${prefix}_support"/>
      <axis xyz="0 0 1" />
      <limit effort="0.1" velocity="100"/>
      <dynamics damping="0.1" friction="0.0"/>
    </joint>

    <transmission name="${prefix}_yaw_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${parent}_${prefix}_support_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_yaw_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <link name="${prefix}_caster_wheel">
      <inertial>
        <mass value="2" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia
          ixx="0.003" ixy="0.0" ixz="0.0"
          iyy="0.00581" iyz="0.0"
          izz="0.003" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://iri_segway_rmp200_description/meshes/caster_wheel.dae" scale="1 1 1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <geometry>
          <cylinder length="0.001" radius="0.083"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}_caster_wheel_joint" type="continuous">
      <origin xyz="-0.0397 0 -0.0918" rpy="0 0 0" />
      <parent link="${prefix}_support" />
      <child link="${prefix}_caster_wheel" />
      <axis xyz="0 1 0" />
      <limit effort="1" velocity="100"/>
      <dynamics damping="0.0" friction="0.0"/>
    </joint>

    <transmission name="${prefix}_caster_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_caster_wheel_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_caster_wheel_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <xacro:segway_caster_gazebo prefix="${prefix}" parent="${parent}"/>
  </xacro:macro>
</root>
